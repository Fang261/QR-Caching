<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimg1"
    android:clipToPadding="false"
    android:paddingHorizontal="0dp"
    android:paddingVertical="0dp"
    tools:context=".models.mainpage">


    <ImageButton
        android:id="@+id/map_imageButton"
        android:layout_width="280dp"
        android:layout_height="95dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/app_maptext"
        android:paddingHorizontal="0dp"
        android:paddingVertical="0dp"
        android:scaleType="fitCenter"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/button_big"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <TextView
        android:id="@+id/map_textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="3"
        android:scaleY="1.5"
        android:text="@string/app_maptext"
        app:layout_constraintBottom_toBottomOf="@+id/map_imageButton"
        app:layout_constraintEnd_toEndOf="@+id/map_imageButton"
        app:layout_constraintStart_toStartOf="@+id/map_imageButton"
        app:layout_constraintTop_toTopOf="@+id/map_imageButton"
        tools:text="@string/app_maptext" />

    <ImageButton
        android:id="@+id/events_imageButton"
        android:layout_width="280dp"
        android:layout_height="95dp"
        android:layout_marginBottom="250dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/app_eventtext"
        android:paddingHorizontal="0dp"
        android:paddingVertical="0dp"
        android:scaleType="fitCenter"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/button_big"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/map_imageButton"
        app:layout_constraintStart_toStartOf="@+id/map_imageButton" />

    <TextView
        android:id="@+id/events_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="3"
        android:scaleY="1.5"
        android:text="@string/app_eventtext"
        app:layout_constraintBottom_toBottomOf="@+id/events_imageButton"
        app:layout_constraintEnd_toEndOf="@+id/events_imageButton"
        app:layout_constraintStart_toStartOf="@+id/events_imageButton"
        app:layout_constraintTop_toTopOf="@+id/events_imageButton"
        tools:text="@string/app_eventtext" />

    <ImageButton
        android:id="@+id/btn_scan"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="65dp"
        android:adjustViewBounds="false"
        android:alpha="1"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/app_camera_button"
        android:defaultFocusHighlightEnabled="false"
        android:duplicateParentState="false"
        android:padding="0dp"
        android:paddingHorizontal="0dp"
        android:paddingVertical="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:scaleType="centerInside"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/camera_button" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="126dp"
        android:background="@drawable/header"
        android:backgroundTintMode="screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/profilepic_imageButton"
            android:layout_width="52dp"
            android:layout_height="51dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="68dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="@string/app_profilepic_button"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/screenshot_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.444" />

        <ProgressBar
            android:id="@+id/experiencebar_progressBar"
            style="@style/experiencebar"
            android:layout_width="174dp"
            android:layout_height="21dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="24dp"
            android:background="@color/white"
            android:backgroundTint="#00FFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/profilepic_imageButton"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/level_text"
            android:layout_width="36dp"
            android:layout_height="29dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="36dp"
            android:text="@string/app_profilelevel"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/profilepic_imageButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
